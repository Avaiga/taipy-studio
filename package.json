{
  "name": "taipy-extension",
  "displayName": "taipy-extension",
  "description": "Visual Studio Code extension for Taipy",
  "publisher": "Avaiga",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:taipy.hello",
    "onView:taipy-config",
    "onLanguage:toml",
    "workspaceContains:**/*.toml"
  ],
  "main": "./dist/taipy.js",
  "contributes": {
    "commands": [
      {
        "command": "taipy.hello",
        "title": "Hello Taipy"
      },
      {
        "command": "taipy.refreshConfigs",
        "title": "Refresh",
        "icon": {
          "light": "assets/light/refresh.svg",
          "dark": "assets/dark/refresh.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taipy-config-panel",
          "title": "Taipy Configs",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "views": {
      "taipy-config-panel": [
        {
          "id": "taipy-configs",
          "name": "Config files"
        },
        {
          "id": "taipy-config-datanodes",
          "name": "Data Nodes",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-auth",
          "name": "Auth"
        },
        {
          "type": "webview",
          "id": "taipy-config-details",
          "name": "Details",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "taipy-configs",
        "contents": "No Taipy config files were found."
      },
      {
        "view": "taipy-config-datanodes",
        "contents": "No selected configuration, or the configuration has no data nodes."
      }
    ],
    "menus": {
        "view/title": [
          {
            "command": "taipy.refreshConfigs",
            "when": "view == taipy-configs",
            "group": "navigation"
          }
      ]
    }
  },
  "scripts": {
    "build": "webpack --mode development",
    "watch": "webpack watch --mode development",
    "vscode:package": "vsce package",
    "package": "rm -rf *.vsix && npm run webpack && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.57",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "dotenv-webpack": "^8.0.1",
    "electron": "^20.0.3",
    "eslint": "^8.9.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "path": "^0.12.7",
    "ts-loader": "^9.2.6",
    "tslib": "^2.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@vscode/codicons": "^0.0.32"
  }
}
