{
  "name": "taipy-studio",
  "displayName": "Taipy Studio",
  "description": "Visual Studio Code extension for Taipy",
  "publisher": "Avaiga",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:taipy.config.editor.diagram",
    "onView:taipy-config",
    "onLanguage:toml",
    "workspaceContains:**/*.toml",
    "onFileSystem:taipy-perspective"
  ],
  "main": "./dist/taipy-studio.js",
  "l10n": "./10n",
  "contributes": {
    "commands": [
      {
        "command": "taipy.hello",
        "title": "%extension.commands.taipy.hello%"
      },
      {
        "command": "taipy.refreshConfigs",
        "title": "%extension.commands.taipy.refreshConfigs%",
        "icon": "$(refresh)"
      },
      {
        "command": "taipy.clearConfigCache",
        "title": "%extension.commands.taipy.clearConfigCache%",
        "icon": "$(clear-all)"
      },
      {
        "command": "taipy.show.perpective",
        "title": "%extension.commands.taipy.show.perpective%",
        "icon": "$(type-hierarchy)"
      }
    ],
    "customEditors": [
      {
        "viewType": "taipy.config.editor.diagram",
        "displayName": "%extension.customEditors.taipy-config-editor%",
        "selector": [
          {
            "filenamePattern": "*.toml"
          }
        ],
        "priority": "default"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taipy-config-panel",
          "title": "%extension.viewsContainers.activitybar.taipy-config-panel%",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "views": {
      "taipy-config-panel": [
        {
          "id": "taipy-configs",
          "name": "%extension.views.taipy-config-panel.taipy-configs%"
        },
        {
          "id": "taipy-config-datanodes",
          "name": "%extension.views.taipy-config-panel.taipy-config-datanodes%",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-tasks",
          "name": "%extension.views.taipy-config-panel.taipy-config-tasks%",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-pipelines",
          "name": "%extension.views.taipy-config-panel.taipy-config-pipelines%",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-scenarii",
          "name": "%extension.views.taipy-config-panel.taipy-config-scenarii%",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-auth",
          "name": "%extension.views.taipy-config-panel.taipy-config-auth%",
          "visibility": "collapsed"
        },
        {
          "type": "webview",
          "id": "taipy-config-details",
          "name": "%extension.views.taipy-config-panel.taipy-config-details%",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "taipy-configs",
        "contents": "%extension.viewsWelcome.taipy-configs%"
      },
      {
        "view": "taipy-config-datanodes",
        "contents": "%extension.viewsWelcome.taipy-config-datanodes%"
      },
      {
        "view": "taipy-config-tasks",
        "contents": "%extension.viewsWelcome.taipy-config-tasks%"
      },
      {
        "view": "taipy-config-pipelines",
        "contents": "%extension.viewsWelcome.taipy-config-pipelines%"
      },
      {
        "view": "taipy-config-scenarii",
        "contents": "%extension.viewsWelcome.taipy-config-scenarii%"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "taipy.refreshConfigs",
          "when": "view == taipy-configs",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "taipy.show.perpective",
          "when": "view == taipy-configs || view == taipy-config-pipelines || view == taipy-config-scenarii"
        }
      ],
      "webview/context": [
        {
          "command": "taipy.show.perpective",
          "when": "webviewId == 'taipy.config.editor.diagram' && webviewSection == 'taipy.node'"
        }
      ]
    },
    "configuration": {
      "title": "Taipy Studio",
      "properties": {
        "taipyStudio.editor.drop.enabled": {
          "type": "boolean",
          "default": "true",
          "description": "%config.editor.drop.enabled%"
        },
        "taipyStudio.editor.reveal.enabled": {
          "type": "boolean",
          "default": "true",
          "description": "%config.editor.reveal.enabled%"
        },
        "taipyStudio.diagram.datanode.color": {
          "type": "string",
          "format": "color-hex",
          "default": "#283282",
          "description": "%config.diagram.datanode.color.desc%"
        },
        "taipyStudio.diagram.task.color": {
          "type": "string",
          "format": "color-hex",
          "default": "#ff462b",
          "description": "%config.diagram.task.color.desc%"
        },
        "taipyStudio.diagram.pipeline.color": {
          "type": "string",
          "format": "color-hex",
          "default": "#08a87d",
          "description": "%config.diagram.pipeline.color.desc%"
        },
        "taipyStudio.diagram.scenario.color": {
          "type": "string",
          "format": "color-hex",
          "default": "#f0faff",
          "description": "%config.diagram.scenario.color.desc%"
        }
      }
    }
  },
  "scripts": {
    "build-this": "webpack --mode development",
    "watch-this": "webpack watch --mode development",
    "vscode:package": "vsce package",
    "vscode:prepublish": "npm run prod",
    "package": "rm -rf *.vsix && npm run build && vsce package",
    "build": "concurrently -n vscode,webviews \"webpack --mode development\" \"cd webviews && webpack --mode development\"",
    "prod": "concurrently -n vscode,webviews \"webpack --mode production\" \"cd webviews && webpack --mode production\"",
    "watch": "concurrently -n vscode,webviews \"webpack watch --mode development\" \"cd webviews && webpack watch --mode development\""
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.57",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "concurrently": "^7.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv-webpack": "^8.0.1",
    "electron": "^20.1.3",
    "eslint": "^8.9.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "path": "^0.12.7",
    "ts-loader": "^9.2.6",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@vscode/codicons": "^0.0.32",
    "@vscode/l10n-dev": "^0.0.12",
    "vscode-nls": "^5.2.0"
  }
}
