{
  "name": "taipy-extension",
  "displayName": "taipy-extension",
  "description": "Visual Studio Code extension for Taipy",
  "publisher": "Avaiga",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:taipy.hello",
    "onView:taipy-config",
    "onLanguage:toml",
    "workspaceContains:**/*.toml"
  ],
  "main": "./dist/taipy.js",
  "contributes": {
    "commands": [
      {
        "command": "taipy.hello",
        "title": "Hello Taipy"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taipy-config-panel",
          "title": "Taipy Configs",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "views": {
      "taipy-config-panel": [
        {
          "id": "taipy-configs",
          "name": "Config files"
        },
        {
          "id": "taipy-config-datanodes",
          "name": "Data Nodes",
          "when": "taipy:numberOfConfigFiles>0"
        },
        {
          "id": "taipy-config-auth",
          "name": "Auth"
        },
        {
          "type": "webview",
          "id": "taipy-config-details",
          "name": "Details",
          "icon": "assets/TaipyLogoBW.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "taipy-configs",
        "contents": "No Taipy config files were found."
      }
    ]
  },
  "scripts": {
    "build": "npm run tsc -p ./",
    "watch": "npm run tsc -watch -p ./ && npm run build",
    "vscode:package": "vsce package",
    "webpack": "rm -rf ./dist/* && webpack --mode development",
    "package": "rm -rf *.vsix && npm run webpack && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "dotenv-webpack": "^7.1.0",
    "electron": "^20.0.3",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "ts-loader": "^9.2.6",
    "tsc": "^2.0.4",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@vscode/codicons": "^0.0.32",
    "module-alias": "^2.2.2",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "_moduleAliases": {
    "utils": "dist/utils",
    "views": "dist/views",
    "components": "dist/components",
    "constants": "dist/constants"
  }
}
