/* tsconfig for Taipy's Visual Studio Code extension */
{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": ".",
		"sourceMap": true,
		"strict": false,   /* enable all strict type-checking options */
		"noUnusedParameters": false,  /* Report errors on unused parameters. */
		"noEmitHelpers": true,
		"importHelpers": true,
	},
	"include": [
		"src",
		"shared",
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
